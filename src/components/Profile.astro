---
import type { Color } from '../consts';

interface Props {
	image: string;
	name: string;
	color?: Color;
}

const { image, name, color } = Astro.props;
---

<div class="profile">
    <img src={image}>
    <div>
        <h4>{name}</h4>
        <slot />
    </div>
</div>

<style>
    .profile {
        display: flex;
        flex-grow: 1;
        background-color: {color};
    }

    .profile > div {
        padding: 24px;
    }
</style>